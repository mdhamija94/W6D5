<h1>Make a Rental Request</h1>

<form action="<%= cat_rental_requests_url %>" method="post">
    <label for="cat">Cat
        <select name="cat_rental_request[cat_id]">
            <option disabled selected>-- Select a Cat --</option>
            <% Cat.all.each do |cat| %>
                <option value=<%= cat.id %>> <%= cat.name %> </option>
            <% end %>
        </select>
    </label>
    <br>
    <br>
    <label for="start_date">Start Date
        <input 
        type="date" 
        id="start_date" 
        name="cat_rental_request[start_date]" 
        value=<%= Time.now %>
        >
    </label>
    <br>
    <br>
    <label for="end_date">End Date
        <input 
        type="date" 
        id="end_date" 
        name="cat_rental_request[end_date]" 
        value=<%= Time.now + 7.days %>
        >
    </label>
    <br>
    <br>
    <input type="submit" value="Submit">
</form>